      creationTimestamp: null
      labels:
        name: orders-db
        product: sockshop
        stage: prod
        tier: data
        version: "1.0"
    spec:
      containers:
      - env:
        - name: MONGODB_ADMIN_PASSWORD
          value: password
        - name: MONGODB_USER
          value: user
        - name: MONGODB_PASSWORD
          value: password
        - name: MONGODB_DATABASE
